{
	"name": "mood-tracker",
	"private": true,
	"packageManager": "pnpm@8.15.6",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"prepare": "husky",
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint --continue",
		"lint-staged": "turbo lint-staged --concurrency 1 --continue",
		"format": "prettier --write \"**/*.{ts,tsx,md}\""
	},
	"devDependencies": {
		"@repo/eslint-config": "workspace:*",
		"@repo/prettier-config": "workspace:*",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"prettier": "^3.5.3",
		"turbo": "^2.5.0"
	}
}
